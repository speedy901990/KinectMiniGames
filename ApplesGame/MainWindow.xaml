<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WpfViewers="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" x:Class="ApplesGame.MainWindow"
        Title="ApplesGame"
        x:Name="ApplesGame"
        Closing="WindowClosing"
        KeyDown="ApplesGame_KeyDown"
        mc:Ignorable="d"
        d:DesignWidth="1920"
        d:DesignHeight="1080"
        MinWidth="800"
        MinHeight="600"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">
    <Viewbox>
        <Grid x:Name="LayoutRoot" Width="1920" Height="1080">
            <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="sensorChooserUI" Margin="940,0" />
            <k:KinectRegion Grid.Row="0" x:Name="kinectRegion" Height="1080" VerticalAlignment="Top" Grid.RowSpan="2">
                <Grid x:Name="kinectRegionGrid" Margin="0,40,0,0" Width="1920" Height="1080">
                    <Canvas Margin="0" x:Name="playfield" Height="Auto" Width="1620" HorizontalAlignment="Left">
                    </Canvas>
                                        
                    <Canvas x:Name="UserViewer" HorizontalAlignment="Right" VerticalAlignment="Top" Width="300" Height="180">
                        <Border HorizontalAlignment="Right" Width="250" Height="180" VerticalAlignment="Top"  Margin="25,0,0,0" BorderThickness="5" BorderBrush="White">
                        </Border>
                        <k:KinectUserViewer HorizontalAlignment="Right" Width="250" Height="180" VerticalAlignment="Top"  Margin="25,0,0,0" />
                    </Canvas>
                </Grid>
            </k:KinectRegion>            
        </Grid>
    </Viewbox>
</Window>